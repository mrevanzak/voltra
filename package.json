{
  "name": "voltra",
  "version": "0.2.1",
  "description": "Render SwiftUI via VoltraUI JSON from React Native (JSX → JSON → iOS)",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "default": "./build/index.js"
    },
    "./server": {
      "types": "./build/server.d.ts",
      "default": "./build/server.js"
    }
  },
  "scripts": {
    "build": "expo-module build",
    "clean": "expo-module clean",
    "clean:plugin": "rm -rf plugin/build plugin/tsconfig.tsbuildinfo",
    "format:check": "prettier --check .",
    "lint": "expo-module eslint",
    "lint:libOnly": "expo-module eslint --ignore-pattern 'example/*'",
    "test": "expo-module test",
    "prepare": "expo-module prepare && rm .eslintrc.js",
    "prepublishOnly": "expo-module prepublishOnly",
    "expo-module": "expo-module",
    "open:ios": "xed example/ios",
    "generate": "ts-node generator/generate-types.ts",
    "validate": "ts-node generator/validate-schema.ts"
  },
  "keywords": [
    "react-native",
    "expo",
    "live-activity",
    "ios",
    "apple"
  ],
  "author": "Saúl Sharma (https://x.com/saul_sharma)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saulsharma/voltra.git"
  },
  "bugs": {
    "url": "https://github.com/saulsharma/voltra/issues"
  },
  "license": "MIT",
  "homepage": "https://github.com/saulsharma/voltra#readme",
  "dependencies": {
    "react-is": "^19.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "~19.0.0",
    "@types/react-is": "^19.2.0",
    "ajv": "^8.12.0",
    "eslint": "^9.33.0",
    "eslint-config-expo": "^9.2.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "expo": "~53.0.0",
    "expo-module-scripts": "^4.1.10",
    "prettier": "^3.6.2",
    "react-native": "0.79.1",
    "ts-node": "^10.9.0"
  },
  "peerDependencies": {
    "expo": "*",
    "react": "*",
    "react-native": "*"
  }
}
