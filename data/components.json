{
  "version": "1.0.0",
  "components": [
    {
      "name": "Text",
      "description": "Display text content",
      "swiftAvailability": "iOS 13.0, macOS 10.15",
      "parameters": {
        "numberOfLines": {
          "type": "number",
          "optional": true,
          "description": "Maximum number of lines to display"
        },
        "multilineTextAlignment": {
          "type": "string",
          "optional": true,
          "enum": ["left", "center", "right", "auto"],
          "description": "Text alignment for multiline text"
        }
      }
    },
    {
      "name": "Button",
      "description": "Interactive button component",
      "swiftAvailability": "iOS 13.0, macOS 10.15",
      "hasChildren": true,
      "parameters": {}
    },
    {
      "name": "Label",
      "description": "Label with optional icon",
      "swiftAvailability": "iOS 13.0, macOS 10.15",
      "parameters": {
        "title": {
          "type": "string",
          "optional": true,
          "description": "Text content for the label"
        },
        "systemImage": {
          "type": "string",
          "optional": true,
          "description": "SF Symbol name for the label icon"
        }
      }
    },
    {
      "name": "Image",
      "description": "Display images from asset catalog or base64 data",
      "swiftAvailability": "iOS 13.0, macOS 10.15",
      "parameters": {
        "source": {
          "type": "object",
          "optional": true,
          "jsonEncoded": true,
          "description": "Image source - either { assetName: string } for asset catalog images or { base64: string } for base64 encoded images"
        },
        "resizeMode": {
          "type": "string",
          "optional": true,
          "enum": ["cover", "contain", "stretch", "repeat", "center"],
          "default": "cover",
          "description": "How the image should be resized to fit its container"
        }
      }
    },
    {
      "name": "Symbol",
      "description": "Display SF Symbols with advanced configuration",
      "swiftAvailability": "iOS 13.0, macOS 10.15",
      "parameters": {
        "name": {
          "type": "string",
          "optional": true,
          "description": "SF Symbol name"
        },
        "type": {
          "type": "string",
          "optional": true,
          "enum": ["monochrome", "hierarchical", "palette", "multicolor"],
          "description": "Symbol rendering type"
        },
        "scale": {
          "type": "string",
          "optional": true,
          "enum": ["default", "unspecified", "small", "medium", "large"],
          "description": "Symbol scale"
        },
        "weight": {
          "type": "string",
          "optional": true,
          "enum": [
            "unspecified",
            "ultraLight",
            "thin",
            "light",
            "regular",
            "medium",
            "semibold",
            "bold",
            "heavy",
            "black"
          ],
          "description": "Symbol weight"
        },
        "size": {
          "type": "number",
          "optional": true,
          "default": 24,
          "description": "Symbol size in points"
        },
        "tintColor": {
          "type": "string",
          "optional": true,
          "description": "Tint color for the symbol"
        },
        "colors": {
          "type": "string",
          "optional": true,
          "description": "Pipe-separated colors for palette type"
        },
        "resizeMode": {
          "type": "string",
          "optional": true,
          "description": "Image resize mode"
        }
      }
    },
    {
      "name": "Toggle",
      "description": "Toggle switch control",
      "swiftAvailability": "iOS 13.0, macOS 10.15",
      "parameters": {
        "defaultValue": {
          "type": "boolean",
          "optional": true,
          "default": false,
          "description": "Initial toggle state"
        }
      }
    },
    {
      "name": "LinearProgressView",
      "description": "Linear progress indicator (determinate or timer-based)",
      "swiftAvailability": "iOS 16.0, macOS 13.0",
      "parameters": {
        "value": {
          "type": "number",
          "optional": true,
          "description": "Current progress value"
        },
        "countDown": {
          "type": "boolean",
          "optional": true,
          "description": "Whether to count down instead of up"
        },
        "maximumValue": {
          "type": "number",
          "optional": true,
          "default": 100,
          "description": "Maximum progress value"
        },
        "endAtMs": {
          "type": "number",
          "optional": true,
          "description": "End time in milliseconds since epoch"
        },
        "startAtMs": {
          "type": "number",
          "optional": true,
          "description": "Start time in milliseconds since epoch"
        },
        "trackColor": {
          "type": "string",
          "optional": true,
          "description": "Color for the track (background) of the progress bar"
        },
        "progressColor": {
          "type": "string",
          "optional": true,
          "description": "Color for the progress fill"
        },
        "cornerRadius": {
          "type": "number",
          "optional": true,
          "description": "Corner radius for the progress bar"
        },
        "height": {
          "type": "number",
          "optional": true,
          "description": "Explicit height for the progress bar"
        },
        "thumb": {
          "type": "component",
          "optional": true,
          "description": "Custom thumb component to display at progress position"
        }
      }
    },
    {
      "name": "CircularProgressView",
      "description": "Circular progress indicator (determinate or timer-based)",
      "swiftAvailability": "iOS 16.0, macOS 13.0",
      "parameters": {
        "value": {
          "type": "number",
          "optional": true,
          "description": "Current progress value"
        },
        "countDown": {
          "type": "boolean",
          "optional": true,
          "description": "Whether to count down instead of up"
        },
        "maximumValue": {
          "type": "number",
          "optional": true,
          "default": 100,
          "description": "Maximum progress value"
        },
        "endAtMs": {
          "type": "number",
          "optional": true,
          "description": "End time in milliseconds since epoch"
        },
        "startAtMs": {
          "type": "number",
          "optional": true,
          "description": "Start time in milliseconds since epoch"
        },
        "trackColor": {
          "type": "string",
          "optional": true,
          "description": "Color for the track (background) of the circular progress indicator"
        },
        "progressColor": {
          "type": "string",
          "optional": true,
          "description": "Color for the progress fill"
        },
        "lineWidth": {
          "type": "number",
          "optional": true,
          "description": "Width of the stroke line"
        }
      }
    },
    {
      "name": "Gauge",
      "description": "Gauge indicator for progress visualization",
      "swiftAvailability": "iOS 16.0, macOS 13.0",
      "parameters": {
        "value": {
          "type": "number",
          "optional": true,
          "description": "Current gauge value"
        },
        "minimumValue": {
          "type": "number",
          "optional": true,
          "default": 0,
          "description": "Minimum value of the gauge range"
        },
        "maximumValue": {
          "type": "number",
          "optional": true,
          "default": 1,
          "description": "Maximum value of the gauge range"
        },
        "endAtMs": {
          "type": "number",
          "optional": true,
          "description": "End time in milliseconds since epoch"
        },
        "startAtMs": {
          "type": "number",
          "optional": true,
          "description": "Start time in milliseconds since epoch"
        },
        "tintColor": {
          "type": "string",
          "optional": true,
          "description": "Tint color for the gauge"
        },
        "gaugeStyle": {
          "type": "string",
          "optional": true,
          "enum": [
            "automatic",
            "accessoryLinear",
            "accessoryLinearCapacity",
            "accessoryCircular",
            "accessoryCircularCapacity",
            "linearCapacity"
          ],
          "description": "Visual style of the gauge"
        },
        "currentValueLabel": {
          "type": "component",
          "optional": true,
          "description": "Custom text for current value label"
        },
        "minimumValueLabel": {
          "type": "component",
          "optional": true,
          "description": "Text for minimum value label"
        },
        "maximumValueLabel": {
          "type": "component",
          "optional": true,
          "description": "Text for maximum value label"
        }
      }
    },
    {
      "name": "Timer",
      "description": "Text-based countdown/stopwatch timer component",
      "swiftAvailability": "iOS 16.0, macOS 13.0",
      "parameters": {
        "endAtMs": {
          "type": "number",
          "optional": true,
          "description": "End time in milliseconds since epoch"
        },
        "startAtMs": {
          "type": "number",
          "optional": true,
          "description": "Start time in milliseconds since epoch"
        },
        "durationMs": {
          "type": "number",
          "optional": true,
          "description": "Duration in milliseconds"
        },
        "direction": {
          "type": "string",
          "optional": true,
          "enum": ["up", "down"],
          "default": "down",
          "description": "Count direction"
        },
        "autoHideOnEnd": {
          "type": "boolean",
          "optional": true,
          "description": "Hide timer when complete"
        },
        "textStyle": {
          "type": "string",
          "optional": true,
          "enum": ["timer", "relative"],
          "default": "timer",
          "description": "Text formatting style"
        },
        "textTemplates": {
          "type": "string",
          "optional": true,
          "jsonEncoded": true,
          "description": "JSON-encoded TextTemplates object with running/completed templates"
        }
      }
    },
    {
      "name": "LinearGradient",
      "description": "Linear gradient background with children",
      "swiftAvailability": "iOS 13.0, macOS 10.15",
      "hasChildren": true,
      "parameters": {
        "colors": {
          "type": "string",
          "optional": true,
          "description": "Pipe-separated color list (e.g., '#ff0000|#00ff00|#0000ff')"
        },
        "stops": {
          "type": "string",
          "optional": true,
          "description": "Pipe-separated gradient stops (e.g., 'red@0|orange@0.5|yellow@1')"
        },
        "startPoint": {
          "type": "string",
          "optional": true,
          "description": "Start point (e.g., 'topLeading', 'center', or 'x,y')"
        },
        "endPoint": {
          "type": "string",
          "optional": true,
          "description": "End point (e.g., 'bottomTrailing', 'center', or 'x,y')"
        },
        "dither": {
          "type": "boolean",
          "optional": true,
          "description": "Enable dithering (system-controlled)"
        }
      }
    },
    {
      "name": "VStack",
      "description": "Vertical stack container",
      "swiftAvailability": "iOS 13.0, macOS 10.15",
      "hasChildren": true,
      "parameters": {
        "spacing": {
          "type": "number",
          "default": 0,
          "optional": true,
          "description": "Spacing between children"
        },
        "alignment": {
          "type": "string",
          "default": "center",
          "optional": true,
          "enum": ["leading", "center", "trailing"],
          "description": "Horizontal alignment"
        }
      }
    },
    {
      "name": "HStack",
      "description": "Horizontal stack container",
      "swiftAvailability": "iOS 13.0, macOS 10.15",
      "hasChildren": true,
      "parameters": {
        "spacing": {
          "type": "number",
          "default": 0,
          "optional": true,
          "description": "Spacing between children"
        },
        "alignment": {
          "type": "string",
          "default": "center",
          "optional": true,
          "enum": ["top", "center", "bottom"],
          "description": "Vertical alignment"
        }
      }
    },
    {
      "name": "ZStack",
      "description": "Depth-based stack container",
      "swiftAvailability": "iOS 13.0, macOS 10.15",
      "hasChildren": true,
      "parameters": {
        "alignment": {
          "type": "string",
          "optional": true,
          "description": "Child alignment"
        }
      }
    },
    {
      "name": "GroupBox",
      "description": "Grouped content container",
      "swiftAvailability": "iOS 13.0, macOS 10.15",
      "hasChildren": true,
      "parameters": {
        "label": {
          "type": "component",
          "optional": true,
          "description": "Label content for the group box"
        }
      }
    },
    {
      "name": "GlassContainer",
      "description": "iOS 26+ Liquid Glass container",
      "swiftAvailability": "iOS 26.0",
      "hasChildren": true,
      "parameters": {
        "spacing": {
          "type": "number",
          "optional": true,
          "description": "Spacing between glass elements"
        }
      }
    },
    {
      "name": "Spacer",
      "description": "Flexible space",
      "swiftAvailability": "iOS 13.0, macOS 10.15",
      "parameters": {
        "minLength": {
          "type": "number",
          "optional": true,
          "description": "Minimum length"
        }
      }
    },
    {
      "name": "Divider",
      "description": "Visual divider",
      "swiftAvailability": "iOS 13.0, macOS 10.15",
      "parameters": {}
    },
    {
      "name": "Mask",
      "description": "Mask content using any Voltra element as the mask shape",
      "swiftAvailability": "iOS 15.0, macOS 12.0",
      "hasChildren": true,
      "parameters": {
        "maskElement": {
          "type": "component",
          "optional": false,
          "description": "Voltra element used as the mask - alpha channel determines visibility"
        }
      }
    }
  ]
}
